@import "normalize.styl"
@import "fonts.styl"

body
	font-size 16px
	width 1024px
	margin 0 auto
	background black

a 
	text-decoration none

ul
	margin 0
	padding 0

figure
	margin 0

figcaption
	text-align center

/* Banner */
.banner
	margin 0
	height 168px

.content
	background white
	color black
	width 1024px
	min-height 460px

.alpha
	width 15em
	position absolute
	top 0

.active
	background #2A2A2A

.menu
	background black
	color white
	font-size 1.3em
	display block
	overflow hidden
	.item
		float left
		list-style none
		a
			color white
			cursor pointer
			padding 0.5em 1.5em
			display block
			border-top 3px solid transparent
			&:hover
				border-top 3px solid white

.alpha_logo
	margin 0
	padding-left 2em

/* Termina banner*/

.info_alpha
	font-size 1.1em
	width 25em
	margin 1em 2em
	padding 1.5em
	display inline-block

.alpha_img
	width 25em

.alpha_image
	display inline-block

.upper
	text-transform uppercase

.preguntas
	margin 0em 2em
	padding 1.5em

.consola_img
	width 10em
	margin 0 4em
	border 2px solid transparent
	&:hover
		border 2px solid black
		cursor pointer

.center-block
	margin 0 auto

.consolas
	width 60em

embed
	margin 0
	width 100%
	height 15em





	






